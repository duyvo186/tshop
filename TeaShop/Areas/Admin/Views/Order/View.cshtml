@model TeaShop.Models.EntityFramework.Order
@using PagedList;
@{
    ViewBag.Title = "Chi tiết đơn hàng";
}
@section naviheader
{
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/admin/order" class="nav-link" style="font-size:18px">Danh sách đơn hàng</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/order" class="nav-link" style="font-size:18px">Chi tiết đơn hàng</a>
        </li>
    </ul>
}
<!-- Main content -->
<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h2 class="card-title" style="font-size:30px">Chi tiết đơn hàng</h2>

        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Mã đơn hàng</label>
                        <p class="form-control" style="font-size:18px">@Model.Code</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Họ tên khách hàng</label>
                        <p class="form-control" style="font-size:18px">@Model.CustomerName</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Tổng tiền</label>
                        <p class="form-control" style="font-size:18px">@TeaShop.Common.Common.FormatNumber(Model.TotalAmount, 0)đ</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">

                        <label style="font-size:20px">Số điện thoại</label>
                        <p class="form-control" style="font-size:18px">@Model.Phone</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Ngày tạo</label>
                        <p class="form-control" style="font-size:18px">@Model.CreatedDate.ToString("dd/MM/yyyy")</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Email</label>
                        <p class="form-control" style="font-size:18px">@Model.Email</p>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label style="font-size:20px">Trạng thái</label>
                        <p class="form-control" style="font-size:18px">@(Model.TypePayment == 1?"Chưa thanh toán" : "Đã thanh toán")</p>
                    </div>
                </div>
                <div class="col-md-6">

                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <h2 class="card-title" style="font-size:30px">Danh sách sản phẩm</h2>
                </div>
                <div class="col-12" style="font-size:18px; margin-top:15px">
                    @Html.Action("Partial_SanPham", "Order", new { id = Model.Id })
                </div>

            </div>


        </div>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->