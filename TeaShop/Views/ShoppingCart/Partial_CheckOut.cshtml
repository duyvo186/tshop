@using TeaShop.Common
@model TeaShop.Models.OrderViewModel


@if (!Request.IsAuthenticated)
{
    <h3>Thông tin khách hàng</h3>
    <div class="form-group">
        @Html.Label("Họ và tên")

        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })

    </div>
    @*<div class="form-group">
            <label>Họ tên khách hàng</label>
            <input type="text" name="CustomerName" required class="form-control" autocomplete="off" />
        </div>*@
    <div class="form-group">
        @Html.Label("Số điện thoại")

        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })

    </div>
    @*<div class="form-group">
            <label>Số điện thoại</label>
            <input type="text" name="Phone" class="form-control" autocomplete="off" />
        </div>*@
    <div class="form-group">
        @Html.Label("Địa chỉ")

        @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })

    </div>
    @*<div class="form-group">
            <label>Địa chỉ</label>
            <input type="text" name="Address" class="form-control" autocomplete="off" />
        </div>*@
    <div class="form-group">
        @Html.Label("Email")

        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })

    </div>

    <div class="form-group">
        @Html.Label("Password")

        @Html.PasswordFor(m => m.PassWord, new { @class = "form-control" })

    </div>
}
<h3>Thông tin giao hàng</h3>
@*<div class="form-group">
        <label>Email</label>
        <input type="text" name="Email" class="form-control" autocomplete="off" />
    </div>*@
<div class="form-group">
    <label>Tên người nhận hàng</label>
    <input type="text" name="deliveryName" value="@User.Identity.Name" class="form-control" />
</div>
<div class="form-group">
    <label>Địa chỉ nhận hàng</label>
    <input type="text" name="deliveryAddress" class="form-control" />
</div>
<div class="form-group">
    <label>Số điện thoại nhận hàng</label>
    <input type="number" name="deliveryPhoneNumber" value="" limit="11" class="form-control" />
</div>
<div class="form-group">
    <label>Ngày giao</label>
    <input type="date" name="deliveryDate" class="form-control" autocomplete="off" />
</div>
<div class="form-group">
    <label>Giờ</label>
    <div style="display:flex;">
        <input type="number" name="deliveryHour" min="0" max="23" value="0" class="form-control" autocomplete="off" style="width: 65px;" />
        <span style="padding:5px">:</span>
        <input type="number" name="deliveryMinute" min="0" max="59" value="0" class="form-control" autocomplete="off" style="width: 65px;" />
    </div>
</div>